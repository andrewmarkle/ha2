<p id="notice"><%= notice %></p>

<% if current_company.tax.present? %>
  <%= link_to "Taxes", taxes_path %>
<% else %>
  <%= link_to "Taxes", new_tax_path %>
<% end %>

<h1>Plans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price per walk</th>
      <th>Interval</th>
      <th>Taxable</th>
      <th>Total price</th>
      <th>Days</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.name %></td>
        <td><%= cents_to_dollars(plan.price_per_walk) %></td>
        <td><%= plan.interval %></td>
        <td><%= plan.taxable %></td>
        <td><%= cents_to_dollars(plan.total_price) %></td>
        <td><%= plan.scheduled_days %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Plan', new_plan_path %>
