<p id="notice"><%= notice %></p>

<h1>Plans</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Name</th>
      <th>Interval</th>
      <th>Price</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th>Saturday</th>
      <th>Sunday</th>
      <th>Taxable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @plans.each do |plan| %>
      <tr>
        <td><%= plan.company %></td>
        <td><%= plan.name %></td>
        <td><%= plan.interval %></td>
        <td><%= plan.price %></td>
        <td><%= plan.monday %></td>
        <td><%= plan.tuesday %></td>
        <td><%= plan.wednesday %></td>
        <td><%= plan.thursday %></td>
        <td><%= plan.friday %></td>
        <td><%= plan.saturday %></td>
        <td><%= plan.sunday %></td>
        <td><%= plan.taxable %></td>
        <td><%= link_to 'Show', plan %></td>
        <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
        <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

